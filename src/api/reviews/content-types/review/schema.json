{
  "kind": "collectionType",
  "collectionName": "reviews",
  "info": {
    "singularName": "review",
    "pluralName": "user-reviews",
    "displayName": "Review"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false
    },
    "comment": {
      "type": "string",
      "required": true
    },
    "rating": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "max": 5
    }
  }
}

